<?xml version="1.0" encoding="utf-8"?>
<com.efa.efadraw.Views.DrawView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:src="@mipmap/edit"
            android:id="@+id/draw_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:src="@mipmap/erase"
            android:id="@+id/erase_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:src="@mipmap/stroke"
            android:id="@+id/stroke_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:src="@mipmap/color"
            android:id="@+id/color_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:src="@mipmap/save"
            android:id="@+id/save_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/draw_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/draw_background"
            android:background="@android:color/white"/>
        <com.efa.efadraw.Views.DrawingCanvasView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/drawing_canvas"/>
    </FrameLayout>
</com.efa.efadraw.Views.DrawView>