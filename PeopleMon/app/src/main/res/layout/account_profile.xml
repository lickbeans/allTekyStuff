<?xml version="1.0" encoding="utf-8"?>
<com.aaroncampbell.peoplemon.Views.AccountProfileView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:text="Full Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/full_name"
        android:textSize="24sp"
        android:textAlignment="center" />

    <TextView
        android:text="Checkin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/last_checkin"
        android:textSize="24sp"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/avatar"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/load_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:text="Load Picture" >
    </Button>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Edit Name" />

    <Button
        android:id="@+id/name_btn"
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</com.aaroncampbell.peoplemon.Views.AccountProfileView>